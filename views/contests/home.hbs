<div class="container fluid">
    <h1>Saytdagi aktiv kontestlar</h1>
    <div class="conatiner d-flex flex-wrap justify-content-between">
        {{#each contests}}
            <div class="card my-1">
            <div class="row g-0 h-100 p-2">
                <div class="col-md-7 h-100 d-flex flex-column">
                    <div class="card-body d-flex flex-column align-items-start">
                        <h5 class="card-title">{{title}}</h5>
                        <p class="card-text">Mualliflar</p>
                        <ul>
                            {{#each authors}}
                                <li><a href="/profile/{{username}}" class="btn btn-sm">{{firstName}} {{lastName}}</a></li>
                            {{/each}}
                        </ul>
                        <p class="card-text">Savollar soni: {{questions.length}} ta</p>
                    </div>
                    <div class="d-flex">
                        <p class="card-text"><a href="/contest/start/{{_id}}" class="btn btn-primary btn-sm">Qatnashish</a> <samll
                                class="text-muted">{{formatDate createdAt}}</strong></p>
                    </div>
                </div>
                <div class="col-md-5 h-100">
                    <img style="object-fit: cover; max-width: 400px; width: 100%;height: 100%;"
                        src="/uploads/{{previewPicture}}"
                        class="img-fluid rounded-start" alt="...">
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>