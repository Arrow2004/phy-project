<div class="conatiner my-5 mx-5">
    <h1>Saytdagi maqolalar</h1>
    <div class="conatiner d-flex flex-wrap justify-content-between">
        {{#each articles}}
            <div class="card mb-3" style="max-width: 600px; max-height: 400px">
            <div class="row g-0 h-100 p-3">
                <div class="col-md-7 h-100 d-flex flex-column">
                    <div class="card-body d-flex flex-column align-items-start">
                        <h5 class="card-title">{{title}}</h5>
                        <p class="card-text">{{preview}}</p>
                    </div>
                    <div>
                        <p class="card-text"><a href="/article/{{_id}}" class="btn btn-primary btn-sm">Batafsil...</a> <samll
                                class="text-muted">{{formatDate createdAt}}</strong></p>
                        <p class="card-text"><a href="/profile/{{author.username}}" class="btn btn-sm">{{author.firstName}} {{author.lastName}}</a></p>
                    </div>
                </div>
                <div class="col-md-5 h-100">
                    <img style="object-fit: cover; width: 100%;height: 100%;"
                        src="/tmp/{{previewPicture}}"
                        class="img-fluid rounded-start" alt="...">
                </div>
            </div>
            </div>
        {{/each}}
    </div>
</div>
