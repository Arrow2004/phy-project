<div class="container">
    <h1>Saytdagi maqolalar</h1>
    <div class="conatiner row">
        {{#each articles}}
            <div class="card mx-3 col-xl-3 col-md-6 p-0">
                <div>
                    <img style="object-fit: cover; width: 100%; min-height: 300px"
                        src="{{previewPicture}}"
                        class="image rounded-top" alt="...">
                </div>
                <div class="card-body d-flex justify-content-between flex-column">
                    <div>
                        <h6 class="card-title">{{title}}</h6>
                        <p class="card-text">{{preview}}</p>
                    </div>
                    <div>
                        <a href="/article/{{_id}}" class="btn btn-primary btn-sm">Batafsil...</a> <samll
                                class="text-muted">{{formatDate createdAt}}</strong>
                        <p class="card-text"><a href="/profile/{{author.username}}" class="btn btn-sm">{{author.firstName}} {{author.lastName}}</a></p>
                    </div>
                </div>
            </div>
        {{/each}}
        
    </div>
</div>
